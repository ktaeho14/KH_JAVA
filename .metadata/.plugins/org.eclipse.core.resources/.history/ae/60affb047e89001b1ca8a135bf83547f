package firstProject.com.test;

import java.util.Scanner;

public class practice {

	public static void main(String[] args) {
		
		
		
		
		
		
		
	}
	
	public void sooho() {
		//구구단의 단을 입력하면 그단까지 출력하게 하시오
				Scanner sc = new Scanner(System.in);
				System.out.println("단수를 입력해 주세요");
				
				int su = sc.nextInt();
				
				
				for(int i = 2; i<=su; i++) {
						
					for(int j = 1; j<10; j++) {
						System.out.println(i + " * " + j + " = " + i*j);
					}System.out.println();
				}
	
	
	}
		
	
	
	public void sooho2() {
		//구구단의 단을 입력하고 그단을 출력하세요
		Scanner sc = new Scanner(System.in);
		System.out.println("단수를 입력하세요");
		int su = sc.nextInt();
		
		
		for(int i =2; i<su; i++){
			System.out.println();
			for(int j=1; j<10; j++) {
				if(su==i) {
				System.out.println(i + " * " + j + "=" + i*j);
				}
			}
		}
		
		
		
		
	}
		
	

}
